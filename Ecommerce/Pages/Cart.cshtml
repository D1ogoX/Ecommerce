@page
@model Ecommerce.Pages.CartModel
@{
}

<h1>Cart</h1>

<div class="container text-center">
    <div class="row">
        <div class="col">
            ID
        </div>
        <div class="col">
            Title
        </div>
        <div class="col">
            Price
        </div>
        <div class="col">
            Quantity
        </div>
    </div>

    @foreach(var cart in Model.cart.products)
    {
        <div class="row">
            <div class="col">
                @cart.productId
            </div>
            <div class="col">
                @cart.product.title
            </div>
            <div class="col">
                @cart.product.price
            </div>
            <div class="col">
                @cart.quantity
            </div>
        </div>
    }
</div>